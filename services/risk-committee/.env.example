DEFAULT_MAX_SINGLE_ORDER=0.05
DEFAULT_MAX_SECTOR_CONCENTRATION=0.30

# VIX thresholds
VIX_HIGH_THRESHOLD=30
VIX_EXTREME_THRESHOLD=40
