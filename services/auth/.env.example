# Auth Service Configuration
# Copy this file to .env and configure values

# Service identity (gRPC only - no HTTP port needed, Kong handles HTTP)
SERVICE_NAME=auth
GRPC_PORT=50059

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379

# User Service configuration
USER_SERVICE_HOST=user
USER_SERVICE_PORT=50058

# JWT configuration (REQUIRED)
JWT_SECRET_KEY=your_jwt_secret_key_here  # REQUIRED: Generate with: openssl rand -base64 32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Consul configuration
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_ENABLED=true

# Logging
LOG_LEVEL=INFO
