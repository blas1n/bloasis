# Portfolio Service Environment Variables
# Copy this file to .env and fill in your actual values

# Service Configuration
SERVICE_NAME=portfolio
GRPC_PORT=50057

# Redis (Caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Redpanda (Messaging) - not used in this service but kept for consistency
REDPANDA_BROKERS=redpanda:9092

# PostgreSQL (Database)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/bloasis
# Or individual settings:
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=bloasis

# Cache TTL (seconds) - user-specific data
CACHE_TTL=3600

# Consul (Service Discovery)
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_ENABLED=true
SERVICE_HOST=portfolio

# Logging
LOG_LEVEL=INFO
