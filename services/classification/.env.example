# Classification Service Environment Variables
# Copy this file to .env and fill in your actual values

# Service Configuration
SERVICE_NAME=classification
GRPC_PORT=50054

# Redis (Layer 2 Caching - 6 hours TTL)
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=21600

# Market Regime Service (gRPC)
MARKET_REGIME_HOST=market-regime
MARKET_REGIME_PORT=50051

# Claude AI (for sector/theme analysis)
# Get your API key from: https://console.anthropic.com/
# If not set, falls back to rule-based classification
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Logging
LOG_LEVEL=INFO
