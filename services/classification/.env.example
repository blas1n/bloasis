# Classification Service Environment Variables
# Copy this file to .env and fill in your actual values

# Service Configuration
SERVICE_NAME=classification
GRPC_PORT=50054

# Redis (Layer 2 Caching - 6 hours TTL)
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=21600

# Market Regime Service (gRPC)
MARKET_REGIME_HOST=market-regime
MARKET_REGIME_PORT=50051

# FinGPT via Hugging Face (for sector/theme analysis)
HUGGINGFACE_TOKEN=your_huggingface_token_here
FINGPT_MODEL=FinGPT/fingpt-sentiment_llama2-13b_lora
FINGPT_TIMEOUT=60.0
USE_MOCK_FINGPT=true  # Set to false for production

# Logging
LOG_LEVEL=INFO
