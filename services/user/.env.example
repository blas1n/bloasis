# User Service Configuration
# Copy to .env and fill in values

# Service identity (no HTTP_PORT - Envoy handles HTTP)
SERVICE_NAME=user
GRPC_PORT=50052

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Redpanda (not used directly, but configured for future use)
REDPANDA_BROKERS=redpanda:9092

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/bloasis

# Consul Service Discovery
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_ENABLED=true

# Cache TTL (preferences - 1 hour)
PREFERENCES_CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
