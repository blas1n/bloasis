# Market Regime Service Environment Variables
# Copy this file to .env and fill in your actual values

# Service Configuration
SERVICE_NAME=market-regime
GRPC_PORT=50051

# Redis (Caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Redpanda (Messaging)
REDPANDA_BROKERS=redpanda:9092

# PostgreSQL (Database)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/bloasis
# Or individual settings:
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=bloasis

# Claude AI (for market regime classification)
# Get your API key from: https://console.anthropic.com/
# If not set, falls back to rule-based (VIX-based) classification
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-haiku-4-5-20251001

# FRED API (for economic indicators)
# Get your API key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Consul (Service Discovery)
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_ENABLED=true
SERVICE_HOST=market-regime

# Logging
LOG_LEVEL=INFO
