# Market Regime Service Environment Variables
# Copy this file to .env and fill in your actual values

# Service Configuration
SERVICE_NAME=market-regime
GRPC_PORT=50051

# Redis (Caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Redpanda (Messaging)
REDPANDA_BROKERS=redpanda:9092

# PostgreSQL (Database)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/bloasis
# Or individual settings:
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=bloasis

# FinGPT via Hugging Face (for market regime classification)
HUGGINGFACE_TOKEN=your_huggingface_token_here
FINGPT_MODEL=FinGPT/fingpt-sentiment_llama2-13b_lora
FINGPT_TIMEOUT=60.0
USE_MOCK_FINGPT=true  # Set to false for production

# Consul (Service Discovery)
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_ENABLED=true
SERVICE_HOST=market-regime

# Logging
LOG_LEVEL=INFO
