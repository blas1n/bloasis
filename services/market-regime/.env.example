# Market Regime Service Environment Variables
# Copy this file to .env and fill in your actual values

# Service Configuration
SERVICE_NAME=market-regime
GRPC_PORT=50051

# Redis (Caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Redpanda (Messaging)
REDPANDA_BROKERS=redpanda:9092

# PostgreSQL (Database)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/bloasis
# Or individual settings:
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=bloasis

# FinGPT API (for market regime classification)
FINGPT_API_KEY=your_fingpt_api_key_here
FINGPT_API_URL=https://api.fingpt.ai/v1

# Logging
LOG_LEVEL=INFO
