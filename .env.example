# BLOASIS Environment Variables
# Copy this file to .env and fill in your actual values
# Docker Compose will automatically load .env if present

# Database (PostgreSQL + TimescaleDB)
POSTGRES_DB=bloasis
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/bloasis

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Redpanda (Kafka API)
REDPANDA_BROKERS=redpanda:9092

# Consul (Service Discovery)
CONSUL_HOST=consul
CONSUL_PORT=8500

# External APIs
FINGPT_API_KEY=your_fingpt_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Kong Gateway JWT Authentication
# Used for JWT token signing/verification
# Generate a secure random secret: openssl rand -base64 32
KONG_JWT_SECRET=your_jwt_secret_here_min_32_chars

# Logging
LOG_LEVEL=INFO
